<!DOCTYPE html>
<html>
  <head>
    <title>Friends</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to 'Friend App', root_path, class:"navbar-brand" %>
        <%# <a class="navbar-brand" href="#">Friends</a> %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <%# <li class="nav-item"><a class="nav-link" href="#">Home</a></li> %>
            <%# <li class="nav-item"><a class="nav-link" href="home/about">About</a></li> %>
            <li class="nav-item" ><%= link_to "New Friend", new_friend_path, class: "nav-link"%></li>
            <li class="nav-item" ><%= link_to "Friends", friends_path, class: "nav-link"%></li>
            <li class="nav-item" ><%= link_to "About Us", home_about_path, class: "nav-link"%></li>
            <%# <li class="nav-item"><a class="nav-link" href="#">Contact</a></li> %>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container mt-4">
      <%= yield %>
    </main>

    <%# <footer class="text-center mt-5 py-3 border-top">
      <p>&copy; 2025 MyRailsApp</p>
    </footer> %>

    <!-- Bootstrap JS (for importmap setup, optional CDN fallback) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
